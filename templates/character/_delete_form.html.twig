<form method="post" action="{{ path('character_delete', {'id': character.id}) }}" onsubmit="return confirm('êtes-vous sûr de vouloir supprimer ce personnage ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ character.id) }}">
    <button class="btn mt-4 ml-5">Supprimer</button>
</form>
