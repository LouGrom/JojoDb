{% extends 'base.html.twig' %}

{% block title %}Personnages{% endblock %}

{% block body %}

<button><a href="{{ path('character_new')}}">Ajouter</a></button>

<h1> Liste des personnages : </h1>

{% for character in characters %}

<a href="{{ path('character_show',{'id' : character.id})}}">{{ character.name }}</a>
<img src="{{ character.picture }}" alt="character picture">
<p>{{ character.description }} </p>

{% endfor %}

{% endblock %}
