{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

<h1>Liste des saisons :</h1>

<a class="btn ml-5" href="{{ path('season_new')}}">Ajouter</a>

<div class="main-contain">
{% for season in seasons %}
    
    <a href="{{ path('season_show',{'id' : season.id})}}">
        <h2> {{ season.name }} </h2>
        <img src="{{ season.picture }}" alt="picture jojo season">
    </a>
   
{% endfor %}
</div>

{% endblock %}