{% extends 'base.html.twig' %}

{% block title %}Stands{% endblock %}

{% block body %}

<h1> Liste des stands : </h1>

<a class="btn mb-4 ml-5" href="{{ path('character_new')}}">Ajouter</a>

<div class="d-flex flex-wrap justify-content-around">
    {% for stand in stands %}

        <div class="card mb-5" style="width: 18rem;">
            <img height="350" class="card-img-top" src="{{ stand.picture }}" alt="character picture">
            <div class="card-body">
                <h5 class="card-title">{{ stand.name }}</h5>
                <p class="card-text">{{ stand.description[:150]~'...' }}</p>
                <a href="{{ path('stand_show', {'id' : stand.id})}}" class="btn">DÃ©tail</a>
            </div>
        </div>

    {% endfor %}
</div>

{% endblock %}
